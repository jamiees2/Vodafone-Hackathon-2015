// http://paulirish.com/2012/box-sizing-border-box-ftw/
* { box-sizing: border-box; }

html,
body {
    height: 100%;
    width: 100%;
}

body,
input{
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", sans-serif;
    font-weight: 300;
    text-rendering: optimizeLegibility;
}
.container.main, section.app{
    min-height: 100%;
    height: 100%;
}
#map-canvas {
  height: 60%;
  //min-height: 500px;
}

.tabs {
    background-color: #ee6e73;
}
.tabs .tab a {
    color: white;
}
.tabs .indicator {
    background-color: lighten(#f6b2b5, 50%);
}
.container{width: 100%;}
@media only screen and (min-width: 601px) {
.container {
  width: 100%;
  padding: 0 1.5rem;
}
}
.trips {
    td, th {
        border-radius: 0px;
    }
    tbody tr {
        cursor: pointer;
        &:hover{
            background-color: lighten(#ee6e73,20%) !important;
        }

    }
}

.chart-cont
{
    margin-bottom: 4rem;
}

.chart
{
    height: 250px;
}
